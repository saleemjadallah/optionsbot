# Tastytrade OAuth2 Configuration
TASTYTRADE_CLIENT_ID=your_client_id_here
TASTYTRADE_CLIENT_SECRET=your_client_secret_here
TASTYTRADE_REDIRECT_URI=http://localhost:8080/callback
TASTYTRADE_SCOPES=read,trade,openid
TASTYTRADE_SANDBOX=True  # Set to False for production trading

# Tastytrade Account Information
TASTYTRADE_USERNAME=your_username_here
TASTYTRADE_EMAIL=your_email_here
TASTYTRADE_ACCOUNT_NUMBER=  # Will be fetched after OAuth login

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=options_trader
DB_USER=trader
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Risk Management Settings
DEFAULT_RISK_LEVEL=moderate  # Options: low, moderate, high
MAX_POSITION_SIZE=0.25  # 25% of portfolio
MAX_DAILY_LOSS=0.05  # 5% daily loss limit
VAR_CONFIDENCE=0.95  # 95% confidence for VaR
LEVERAGE_LIMIT=2.0  # Maximum 2x leverage
CLOSE_ON_SHUTDOWN=False  # Whether to close all positions on shutdown

# Trading Parameters
MIN_OPTION_VOLUME=100  # Minimum option volume for entry
MIN_OPTION_OI=500  # Minimum open interest
MAX_SPREAD_PERCENT=0.02  # Maximum bid-ask spread as % of mid price
REBALANCE_THRESHOLD=0.1  # Price move threshold for gamma scalping
MIN_PROFIT_THRESHOLD=50  # Minimum profit for rebalancing

# API Rate Limits
MAX_ORDERS_PER_MINUTE=60
MAX_API_CALLS_PER_SECOND=10

# Monitoring and Alerts
DASHBOARD_PORT=8050
ENABLE_EMAIL_ALERTS=False
ALERT_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/trading_bot.log
MAX_LOG_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Backtesting Settings
BACKTEST_START_DATE=2022-01-01
BACKTEST_END_DATE=2023-12-31
BACKTEST_INITIAL_CAPITAL=100000
BACKTEST_COMMISSION=0.65  # Per contract

# Machine Learning Models
ML_MODEL_PATH=models/saved/
RETRAIN_INTERVAL_DAYS=30
MIN_TRAINING_SAMPLES=10000

# Data Sources
USE_LIVE_DATA=True
HISTORICAL_DATA_PATH=data/historical/
CACHE_EXPIRY_SECONDS=300  # 5 minutes

# Performance Monitoring
ENABLE_PROMETHEUS=True
PROMETHEUS_PORT=9090
METRICS_INTERVAL_SECONDS=60